generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./app.db"
}

// SQLite не поддерживает native enum — используем строки

model User {
  id           Int      @id @default(autoincrement())
  username     String   @unique
  passwordHash String
  role         String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  sales        Sale[]
  movements    StockMovement[]
  phoneMovements PhoneMovement[]
  creditPayments CreditPayment[]
}

model Category {
  id    Int      @id @default(autoincrement())
  name  String   @unique
  products Product[]
}

model Product {
  id        Int       @id @default(autoincrement())
  name      String
  sku       String    @unique
  categoryId Int?
  category  Category? @relation(fields: [categoryId], references: [id])
  price     Decimal
  costPrice Decimal   @default(0)
  imageUrl  String?
  stock     Int       @default(0)
  packSize  Int       @default(1) // множитель для поступления (1 пачка = N штук)
  isComposite Boolean @default(false) // составной товар (например, хот-дог)
  bunComponentId Int?
  bunComponent   Product? @relation("Product_BunComponent", fields: [bunComponentId], references: [id])
  bunChildren    Product[] @relation("Product_BunComponent")
  sausageComponentId Int?
  sausageComponent   Product? @relation("Product_SausageComponent", fields: [sausageComponentId], references: [id])
  sausageChildren    Product[] @relation("Product_SausageComponent")
  sausagesPerUnit Int?
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  saleItems SaleItem[]
  movements StockMovement[]

  @@index([sku])
}

model StockMovement {
  id        Int       @id @default(autoincrement())
  productId Int
  product   Product   @relation(fields: [productId], references: [id])
  type      String
  quantity  Int
  unitPrice Decimal?
  unitCost  Decimal?  // снимок себестоимости на момент движения
  note      String?
  userId    Int
  user      User      @relation(fields: [userId], references: [id])
  createdAt DateTime  @default(now())

  @@index([productId, createdAt])
}

model Sale {
  id            Int        @id @default(autoincrement())
  userId        Int
  user          User       @relation(fields: [userId], references: [id])
  total         Decimal
  discount      Decimal?
  paymentMethod String?    // 'cash', 'card', 'credit'
  customerFirstName String?
  customerLastName String?
  initialPayment Decimal?  // первоначальный платёж для кредита
  monthlyPayment Decimal?  // ежемесячный платёж для кредита
  creditMonths  Int?       // период кредитования в месяцах
  createdAt     DateTime   @default(now())
  items         SaleItem[]
  phoneSales    PhoneSale[]
  creditPayments CreditPayment[]

  @@index([createdAt])
  @@index([paymentMethod])
}

model SaleItem {
  id         Int      @id @default(autoincrement())
  saleId     Int
  sale       Sale     @relation(fields: [saleId], references: [id])
  productId  Int
  product    Product  @relation(fields: [productId], references: [id])
  quantity   Int
  unitPrice  Decimal
  unitCost   Decimal?
}

model Phone {
  id          Int       @id @default(autoincrement())
  imei        String    @unique
  model       String
  purchasePrice Decimal  // цена покупки (приход)
  condition   String    // 'new' или 'used'
  salePrice   Decimal?  // цена продажи (может быть установлена позже)
  status      String    @default("in_stock") // 'in_stock', 'sold'
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  movements   PhoneMovement[]
  sales       PhoneSale[]

  @@index([imei])
  @@index([status])
}

model PhoneMovement {
  id            Int       @id @default(autoincrement())
  phoneId       Int
  phone         Phone     @relation(fields: [phoneId], references: [id])
  type          String    // 'IN' - поступление, 'SALE' - продажа
  purchasePrice Decimal?  // цена покупки
  salePrice     Decimal?  // цена продажи
  note          String?
  userId        Int
  user          User      @relation(fields: [userId], references: [id])
  createdAt     DateTime  @default(now())

  @@index([phoneId, createdAt])
}

model PhoneSale {
  id            Int       @id @default(autoincrement())
  saleId        Int
  sale          Sale      @relation(fields: [saleId], references: [id])
  phoneId       Int
  phone         Phone     @relation(fields: [phoneId], references: [id])
  salePrice     Decimal
  purchasePrice Decimal   // себестоимость на момент продажи
  createdAt     DateTime  @default(now())

  @@index([saleId])
  @@index([phoneId])
}

model CreditPayment {
  id            Int       @id @default(autoincrement())
  saleId        Int
  sale          Sale      @relation(fields: [saleId], references: [id])
  amount        Decimal   // сумма платежа
  note          String?   // примечание
  userId        Int
  user          User      @relation(fields: [userId], references: [id])
  createdAt     DateTime  @default(now())

  @@index([saleId, createdAt])
}


